<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/nen"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#136EB6"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </ImageView>
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/benhnhan">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Bệnh Nhân"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
 <LinearLayout
   android:layout_marginBottom="5dp"
     android:layout_width="match_parent"
     android:layout_height="30dp"
     android:layout_weight="1"
     android:weightSum="2">
     <RelativeLayout

         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <ImageView
             android:layout_margin="5dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#AB502B28"
             android:src="@drawable/clinichistory"></ImageView>

         <TextView
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:textColor="#000"
             android:textSize="25dp"
             android:layout_marginTop="70dp"
             android:text="Tài liệu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </TextView>
     </RelativeLayout>
     <RelativeLayout
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <ImageView
android:background="#39DCC4"
             android:layout_margin="5dp"
            android:src="@drawable/nurse"
             android:layout_centerInParent="true"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         </ImageView>
         <TextView


            android:layout_centerHorizontal="true"
             android:textColor="#000"
             android:textSize="25dp"
             android:layout_marginTop="70dp"
             android:text="Nhân Viên"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

         </TextView>
     </RelativeLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:weightSum="2">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="#FFEB3B"
                android:layout_margin="5dp"
                android:src="@drawable/research"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <TextView
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginTop="70dp"
                android:text="Nghiên cứu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="#3F99B5"
                android:layout_margin="5dp"
                android:src="@drawable/ca"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <TextView
                android:layout_centerHorizontal="true"

                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginTop="70dp"
                android:text="Lịch hẹn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_weight="1"
    android:weightSum="2">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D5D3D0"
            android:src="@drawable/chat"></ImageView>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginTop="70dp"
            android:text=" Tin nhắn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D5D3D0"
            android:src="@drawable/settings"></ImageView>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginTop="70dp"
            android:text=" Cài đặt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
